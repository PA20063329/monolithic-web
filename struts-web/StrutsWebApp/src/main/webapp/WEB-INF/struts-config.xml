<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
	<form-beans>
		<form-bean name="loginForm" type="com.wipro.webApp.form.ItemLookupForm" />
	</form-beans>
	<action-mappings>
		<action name="loginForm" path="/login"
			type="com.wipro.webApp.action.ItemLookupAction" scope="request"
			input="/login.jsp">
			<forward name="failure" path="/login.jsp" redirect="true" />
			<forward name="success" path="/success.jsp" redirect="true" />
		</action>
	</action-mappings>
	 <plug-in className="com.mkyong.common.plugin.HibernatePlugin">
      	<set-property property="path" value="/hibernate.cfg.xml"/>
    </plug-in>
 
 <!-- <message-resources
		parameter="com.mkyong.customer.properties.Customer" /> -->
</struts-config>